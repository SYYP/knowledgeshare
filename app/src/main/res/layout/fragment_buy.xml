<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_red_dark">
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_search"
            android:drawableLeft="@drawable/icon_search_black"
            android:drawablePadding="10dp"
            android:textSize="13sp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/ll_download"
            android:text="请输入关键字搜索"/>
        <LinearLayout
            android:id="@+id/ll_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_download_selector"/>
                <ImageView
                    android:id="@+id/iv_download_number"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/white_point"/>
                <TextView
                    android:id="@+id/tv_download_number"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/text_red_dark2"
                    android:textSize="8sp"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/buy_tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabTextColor="#999999"
        app:tabIndicatorColor="#b00505"
        app:tabIndicatorHeight="4px"
        app:tabSelectedTextColor="#b00505"
        app:tabTextAppearance="@style/MyCustomTabTextAppearance"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_mine"/>
    <www.knowledgeshare.com.knowledgeshare.view.NoScrollViewPager
        android:id="@+id/buy_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </www.knowledgeshare.com.knowledgeshare.view.NoScrollViewPager>
</LinearLayout>