<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_mine"
    android:orientation="vertical"
    tools:context="www.knowledgeshare.com.knowledgeshare.activity.MyAccountActivity">
    <include layout="@layout/item_title_layout"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_wanjiao2">
                <TextView
                    android:id="@+id/account_money_tv"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:text="0.00元"
                    android:textSize="26dp"
                    android:textColor="@color/text_black"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_mine"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="20dp"
                        android:background="@color/red2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="充值（人民币）"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_weight="3"
                    android:layout_marginRight="35dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/one_money_tv"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="28"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:textColor="@color/yellow4"
                        android:textSize="26dp"
                        android:background="@drawable/bg_yellow2"/>
                    <TextView
                        android:id="@+id/two_money_tv"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="88"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/yellow4"
                        android:textSize="26dp"
                        android:background="@drawable/bg_yellow2"/>
                    <TextView
                        android:id="@+id/three_money_tv"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="99"
                        android:gravity="center"
                        android:textColor="@color/yellow4"
                        android:textSize="26dp"
                        android:background="@drawable/bg_yellow2"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_weight="3"
                    android:layout_marginRight="35dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/four_money_tv"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="100"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:textColor="@color/yellow4"
                        android:textSize="26dp"
                        android:background="@drawable/bg_yellow2"/>
                    <TextView
                        android:id="@+id/five_money_tv"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="188"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/yellow4"
                        android:textSize="26dp"
                        android:background="@drawable/bg_yellow2"/>
                    <TextView
                        android:id="@+id/six_money_tv"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="888"
                        android:gravity="center"
                        android:textColor="@color/yellow4"
                        android:textSize="26dp"
                        android:background="@drawable/bg_yellow2"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/pay_money_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:gravity="center"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/query_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bg_zhifu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="确认支付"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_mine"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="20dp"
                        android:background="@color/red2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="购物管理"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/gmjl_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买记录"
                        android:textColor="@color/text_black"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/power_gmjl"/>
                    <TextView
                        android:id="@+id/gwc_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购物车"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/text_black"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/power_gwc"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:lineSpacingExtra="5dp"
                android:textSize="12dp"
                android:text="1.通过微信、支付宝充值后的余额仅限安卓系统使用；不与其他平台互通。"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:lineSpacingExtra="5dp"
                android:textSize="12dp"
                android:text="2.购买后的商品，在安卓系统和苹果系统均可使用。"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:lineSpacingExtra="5dp"
                android:textSize="12dp"
                android:text="3.充值如遇问题，请联系我们的客服或者邮件留言"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
