<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/close_login"
            android:layout_marginLeft="15dp"
            android:padding="6dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/delete_login"
            android:layout_width="30dp"
            android:layout_height="30dp" ></ImageView>

    </RelativeLayout>
<RelativeLayout

    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/login_title"
        android:id="@+id/login_headimg"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
      <TextView
          android:layout_marginTop="10dp"
          android:textColor="@color/white"
          android:textSize="16sp"
          android:text="欢迎回来，请您登陆"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/login_headimg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        
</RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_radius"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
         <ImageView
             android:id="@+id/img_phone"
             android:padding="10dp"
             android:layout_marginLeft="20dp"
             android:layout_centerVertical="true"
             android:src="@drawable/login_phone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
        <EditText
            android:layout_toRightOf="@id/img_phone"
            android:textCursorDrawable="@null"
            android:cursorVisible="false"
            android:inputType="number"
            android:background="@null"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:textColor="@color/textcolor"
            android:textSize="15sp"
            android:padding="5dp"
            android:id="@+id/login_phone"
            android:layout_centerHorizontal="true"
            android:hint="请输入手机号"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_radius"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img_pwd"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_toRightOf="@id/img_pwd"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:textColor="@color/textcolor"
            android:textSize="15sp"
            android:padding="5dp"
            android:id="@+id/login_pwd"
            android:hint="请输入密码"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
      <LinearLayout
          android:layout_marginTop="5dp"
          android:layout_marginRight="30dp"
          android:layout_marginLeft="35dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <CheckBox
              android:layout_marginLeft="10dp"
              android:id="@+id/rember_pwd"
              android:textSize="15sp"
              android:layout_weight="1"
              android:textColor="#fff"
              android:text="记住密码"
              android:layout_width="0dp"
              android:padding="10dp"
              style="@style/CustomCheckboxTheme"
              android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/no_account"
               android:textSize="15sp"
               android:textColor="#fff"
               android:layout_weight="1"
               android:gravity="right"
               android:text="还没账号？去注册"
               android:layout_width="0dp"
               android:layout_height="wrap_content" />
      </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/login_back"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <TextView
            android:elevation="100dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:padding="5dp"
            android:id="@+id/login_sso"
            android:layout_centerHorizontal="true"
            android:text="登录"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
       <RelativeLayout
           android:layout_marginTop="10dp"
           android:id="@+id/forget_pwd"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textColor="#fff"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:text="忘记密码？"
               android:textSize="16sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>
     <RelativeLayout
         android:layout_marginTop="10dp"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <ImageView
             android:layout_centerVertical="true"
             android:src="@drawable/login_weixin"
             android:layout_centerHorizontal="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
     </RelativeLayout>
</LinearLayout>
