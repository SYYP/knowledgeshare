<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_radioline">
        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/yuan"
            android:drawablePadding="10dp"
            android:text="10:00   凌晨四点的北京"
            android:textColor="@color/textblack"
            android:textSize="16sp"/>
        <LinearLayout
            android:id="@+id/study_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="#f5f5f5">
            <EditText
                android:id="@+id/item_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.1"
                android:padding="10dp"
                android:text="喜欢聆听，风吹过的声只为等待风中夹杂着你的笑声，这不是我想要的结局忧伤的漩涡伴随着天使羽翼煽动着声响,你渐渐远去，从此风中的声音叫做静谧，每一次错过都是忘记，只有每晚的辗转反侧让我记得我的梦你曾来过！
            "
                android:textColor="@color/textblack"
                android:textSize="14sp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/study_liner"
            >

            <TextView
                android:id="@+id/item_compile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="编辑"
                android:padding="10dp"
                android:textColor="@color/textblack"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/item_imgcompile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/item_compile"
                android:src="@drawable/study_bianji"/>
            <TextView
                android:id="@+id/item_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/item_imgcompile"
                android:text="删除"
                android:textColor="@color/textblack"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/item_img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/item_delete"
                android:src="@drawable/study_delete"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>