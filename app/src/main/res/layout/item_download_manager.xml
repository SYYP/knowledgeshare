<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <www.knowledgeshare.com.knowledgeshare.view.EasySwipeMenuLayout
        android:id="@+id/es"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentView="@+id/content_ll"
        app:rightMenuView="@+id/shachu_tv">
        <LinearLayout
            android:id="@+id/content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#E6E6E6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/content_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/if_start_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp">
                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/power_downloading_icon"/>
                        <ImageView
                            android:id="@+id/start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/power_kaishi_iv"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/ll_01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/if_start_rl">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="如何成为一名合格的歌者"
                            android:textColor="@color/text_black" />
                        <ProgressBar
                            android:id="@+id/pbProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/download_progressbar"
                            android:layout_toRightOf="@+id/view_08"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:max="100"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp">
                            <TextView
                                android:id="@+id/downloadSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2M/10M"
                                android:textColor="#999999"/>
                            <TextView
                                android:id="@+id/start_or_pause"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已暂停"
                                android:textColor="#999999"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="30dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/shachu_tv"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="删 除"
            android:textColor="@color/white"
            android:background="@color/red2"/>
    </www.knowledgeshare.com.knowledgeshare.view.EasySwipeMenuLayout>


</LinearLayout>