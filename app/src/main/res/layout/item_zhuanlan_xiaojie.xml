<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"
              android:background="@drawable/bg_wanjiao"
              android:orientation="vertical"
              android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp">
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/text_red_dark"></View>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="崔宗顺男高音的秘籍"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/textblack"
            android:textSize="16sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huise"></View>
    <ImageView
        android:id="@+id/iv_tupian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/demo"/>
    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:lineSpacingMultiplier="1.3"
        android:text="崔宗顺,旅美男低音歌唱家撒旦好几年撒旦就撒空当接龙就撒娇的撒绝对路径撒及逻辑"
        android:textColor="@color/textblack"
        android:textSize="15sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/huise"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
    >
        <TextView
            android:id="@+id/tv_rss_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/icon_rili"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="1223"/>
        <TextView
            android:id="@+id/tv_collect_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/zhuanlan_collect"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="1223"/>
        <TextView
            android:id="@+id/tv_look_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/zhuanlan_read"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="1223"/>
    </RelativeLayout>
</LinearLayout>